<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_bluetooth"
    tools:context="com.menthoven.arduinoandroid.BluetoothActivity"
    android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <EditText
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/edit_text"
                android:imeOptions="actionSend"
                android:inputType="text"/>

        <Button
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:id="@+id/send_button"
                android:text="Send"/>

    </LinearLayout>
    <ListView
            android:layout_width="match_parent"
            android:layout_height="204dp"
            android:id="@+id/chat_list_view"
            android:fastScrollEnabled="true"/>
    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginBottom="10dp" android:layout_marginTop="10dp">

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Switch
                    android:text="手动控制"
                    android:layout_width="116dp"
                    android:layout_height="wrap_content" android:id="@+id/switch_manual"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView
                    android:text="速度"
                    android:layout_width="96dp"
                    android:layout_height="wrap_content" android:id="@+id/textView"/>
            <SeekBar
                    android:layout_width="255dp"
                    android:layout_height="match_parent" android:id="@+id/seekBar_velocity" android:max="100"/>
        </TableRow>
    </TableLayout>
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:layout_marginTop="5dp" android:id="@+id/gridLayout">

        <Button
                android:text="顺时针"
                android:layout_height="48dp" android:id="@+id/button_clock"
                android:layout_width="wrap_content"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"/>
        <Button
                android:text="向后"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:layout_row="2" app:layout_column="1"
                android:id="@+id/button_back"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"/>
        <Button
                android:text="停车"
                android:layout_height="48dp" app:layout_row="0" app:layout_column="1"
                android:id="@+id/button_stop"
                android:layout_width="88dp"
                tools:layout_editor_absoluteY="0dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"/>
        <Button
                android:text="逆时针"
                android:layout_height="wrap_content" app:layout_row="0" app:layout_column="2"
                android:id="@+id/button_anti_clock" android:layout_width="wrap_content"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"/>
        <Button
                android:text="前进"
                android:layout_width="88dp"
                android:layout_height="wrap_content" app:layout_row="1" app:layout_column="1"
                android:id="@+id/button_up"
                app:layout_constraintBottom_toTopOf="@+id/button_back" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"/>
        <Button
                android:text="向左"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:layout_row="2" app:layout_column="0"
                android:id="@+id/button_left"
                app:layout_constraintEnd_toStartOf="@+id/button_back"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"/>
        <Button
                android:text="向右"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:layout_row="2" app:layout_column="2"
                android:id="@+id/button_right"
                app:layout_constraintStart_toEndOf="@+id/button_back"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"/>
    </android.support.constraint.ConstraintLayout>

</LinearLayout>
